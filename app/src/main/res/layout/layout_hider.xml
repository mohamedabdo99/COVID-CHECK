<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_30sdp"
    >

    <ImageView
        android:id="@+id/ivDrawer"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boymask" />

    <TextView
        android:id="@+id/tvStaySave"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="stay safe"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDrawer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHealthTreasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health is a treasure"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDrawer"
        app:layout_constraintTop_toBottomOf="@+id/tvStaySave" />
</androidx.constraintlayout.widget.ConstraintLayout>